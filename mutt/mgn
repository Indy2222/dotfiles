# Load encrypted configuration (i.e. passwords and similar).
source "gpg -d ~/.mutt/mgn.gpg |"

set from="martin.indra@mgn.cz"

# Set-up MoonGames GMail.
set folder="imaps://imap.gmail.com/"
set spoolfile="+INBOX"
set record="+[Gmail]/Sent Mail"
set postponed="+[Gmail]/Drafts"
set imap_user="martin.indra@mgn.cz"
set smtp_url="smtps://martin.indra@mgn.cz@smtp.gmail.com"
set header_cache="~/.mutt/mgn_header_cache"
set signature="~/.mutt/mgn_signature.txt"

unmailboxes *
mailboxes =INBOX
